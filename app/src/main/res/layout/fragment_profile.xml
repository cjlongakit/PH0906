<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/gradient_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/rodeney"
                android:background="@drawable/account_circle"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:contentDescription="Profile Picture"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tv_user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PH906-0700"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <!-- Personal Info Card -->

        <!-- Guardian Info Card -->

        <LinearLayout style="@style/ProfileCard">

            <TextView
                style="@style/CardTitle"
                android:text="Personal Information" />

            <LinearLayout style="@style/FieldContainer">

                <TextView
                    style="@style/FieldLabel"
                    android:text="First Name" />

                <TextView
                    android:id="@+id/tv_first_name"
                    style="@style/FieldValue" />
            </LinearLayout>

            <LinearLayout style="@style/FieldContainer">

                <TextView
                    style="@style/FieldLabel"
                    android:text="Last Name" />

                <TextView
                    android:id="@+id/tv_last_name"
                    style="@style/FieldValue" />
            </LinearLayout>

            <LinearLayout style="@style/FieldContainer">

                <TextView
                    style="@style/FieldLabel"
                    android:text="Sex" />

                <TextView
                    android:id="@+id/tv_sex"
                    style="@style/FieldValue" />
            </LinearLayout>

            <LinearLayout style="@style/FieldContainer">

                <TextView
                    style="@style/FieldLabel"
                    android:text="Birthdate" />

                <TextView
                    android:id="@+id/tv_birthdate"
                    style="@style/FieldValue" />
            </LinearLayout>

            <LinearLayout style="@style/FieldContainer">

                <TextView
                    style="@style/FieldLabel"
                    android:text="Age" />

                <TextView
                    android:id="@+id/tv_age"
                    style="@style/FieldValue" />
            </LinearLayout>

            <LinearLayout style="@style/FieldContainer">

                <TextView
                    style="@style/FieldLabel"
                    android:text="Nickname" />

                <TextView
                    android:id="@+id/tv_nickname"
                    style="@style/FieldValue" />
            </LinearLayout>

            <LinearLayout style="@style/FieldContainer">

                <TextView
                    style="@style/FieldLabel"
                    android:text="Mobile Number" />

                <TextView
                    android:id="@+id/tv_mobile"
                    style="@style/FieldValue" />
            </LinearLayout>

            <LinearLayout style="@style/FieldContainer">

                <TextView
                    style="@style/FieldLabel"
                    android:text="Address" />

                <TextView
                    android:id="@+id/tv_address"
                    style="@style/FieldValue" />
            </LinearLayout>

            <LinearLayout style="@style/FieldContainer">

                <TextView
                    style="@style/FieldLabel"
                    android:text="Caseworker" />

                <TextView
                    android:id="@+id/tv_caseworker"
                    style="@style/FieldValue" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout style="@style/ProfileCard">
            <TextView
                style="@style/CardTitle"
                android:text="Guardian Information" />

            <LinearLayout style="@style/FieldContainer">
                <TextView
                    style="@style/FieldLabel"
                    android:text="Guardian Name" />
                <TextView
                    android:id="@+id/tv_guardian"
                    style="@style/FieldValue" />
            </LinearLayout>

            <LinearLayout style="@style/FieldContainer">
                <TextView
                    style="@style/FieldLabel"
                    android:text="Guardian Mobile" />
                <TextView
                    android:id="@+id/tv_guardian_mobile"
                    style="@style/FieldValue" />
            </LinearLayout>

            <LinearLayout style="@style/FieldContainer">
                <TextView
                    style="@style/FieldLabel"
                    android:text="Water Baptized" />
                <TextView
                    android:id="@+id/tv_baptized"
                    style="@style/FieldValue" />
            </LinearLayout>
        </LinearLayout>

        <!-- School Info Card -->
        <LinearLayout style="@style/ProfileCard">
            <TextView
                style="@style/CardTitle"
                android:text="School Information" />

            <LinearLayout style="@style/FieldContainer">
                <TextView
                    style="@style/FieldLabel"
                    android:text="Teacher Name" />
                <TextView
                    android:id="@+id/tv_teacher"
                    style="@style/FieldValue" />
            </LinearLayout>
        </LinearLayout>

        <!-- Edit Button -->
        <Button
            android:id="@+id/btn_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:layout_margin="16dp"
            style="@style/ActionButton"
            android:backgroundTint="#2196F3"/>

    </LinearLayout>
</ScrollView>
