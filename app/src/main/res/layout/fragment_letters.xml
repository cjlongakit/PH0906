<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Table Header -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:padding="8dp">

        <TextView android:text="PH Code" android:textColor="@android:color/white" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
        <TextView android:text="Name" android:textColor="@android:color/white" android:layout_weight="2" android:layout_width="0dp" android:layout_height="wrap_content"/>
        <TextView android:text="Type" android:textColor="@android:color/white" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
        <TextView android:text="STATUS" android:textColor="@android:color/white" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
    </TableRow>

    <!-- Table Content -->
    <TableLayout
        android:id="@+id/tableLetters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1,2,3"
        android:padding="8dp"/>
</LinearLayout>
