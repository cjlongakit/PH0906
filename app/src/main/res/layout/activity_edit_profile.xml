<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/gradient_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with ID and Photo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/img_profile_edit"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/account_circle"
                android:scaleType="centerCrop"
                android:contentDescription="@string/profile_picture_desc"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tv_user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PH906-000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnChoosePhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose Photo"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnTakePhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Take Photo"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/colorAccent"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Personal Information Card -->
        <LinearLayout
            style="@style/ProfileCard"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/CardTitle"
                android:text="Personal Information" />

            <!-- Row: First Name -->
            <LinearLayout
                style="@style/FieldContainer"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    style="@style/FieldLabel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="First Name" />

                <EditText
                    android:id="@+id/et_first_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="First Name"
                    android:background="@drawable/edit_text_background"
                    android:padding="10dp" />
            </LinearLayout>

            <!-- Row: Last Name -->
            <LinearLayout
                style="@style/FieldContainer"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    style="@style/FieldLabel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Last Name" />

                <EditText
                    android:id="@+id/et_last_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Last Name"
                    android:background="@drawable/edit_text_background"
                    android:padding="10dp" />
            </LinearLayout>

            <!-- Row: Sex -->
            <LinearLayout
                style="@style/FieldContainer"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    style="@style/FieldLabel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Sex" />

                <EditText
                    android:id="@+id/et_sex"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="M / F"
                    android:maxLength="1"
                    android:background="@drawable/edit_text_background"
                    android:padding="10dp" />
            </LinearLayout>

            <!-- Row: Birthdate -->
            <LinearLayout
                style="@style/FieldContainer"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    style="@style/FieldLabel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Birthdate" />

                <EditText
                    android:id="@+id/et_birthdate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="YYYY-MM-DD"
                    android:background="@drawable/edit_text_background"
                    android:padding="10dp" />
            </LinearLayout>

            <!-- Row: Age -->
            <LinearLayout
                style="@style/FieldContainer"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    style="@style/FieldLabel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Age" />

                <EditText
                    android:id="@+id/et_age"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Age"
                    android:inputType="number"
                    android:background="@drawable/edit_text_background"
                    android:padding="10dp" />
            </LinearLayout>

            <!-- Row: Nickname -->
            <LinearLayout
                style="@style/FieldContainer"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    style="@style/FieldLabel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Nickname" />

                <EditText
                    android:id="@+id/et_nickname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Nickname"
                    android:background="@drawable/edit_text_background"
                    android:padding="10dp" />
            </LinearLayout>

            <!-- Row: Mobile Number -->
            <LinearLayout
                style="@style/FieldContainer"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    style="@style/FieldLabel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Mobile Number" />

                <EditText
                    android:id="@+id/et_mobile_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="0917..."
                    android:inputType="phone"
                    android:background="@drawable/edit_text_background"
                    android:padding="10dp" />
            </LinearLayout>

            <!-- Row: Address -->
            <LinearLayout
                style="@style/FieldContainer"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    style="@style/FieldLabel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Address" />

                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Address"
                    android:minLines="2"
                    android:maxLines="4"
                    android:gravity="top|start"
                    android:background="@drawable/edit_text_background"
                    android:padding="10dp" />
            </LinearLayout>

            <!-- Row: Caseworker Assigned -->
            <LinearLayout
                style="@style/FieldContainer"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    style="@style/FieldLabel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Caseworker" />

                <EditText
                    android:id="@+id/et_caseworker_assigned"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Caseworker"
                    android:background="@drawable/edit_text_background"
                    android:padding="10dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Guardian Information Card -->
        <LinearLayout
            style="@style/ProfileCard"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/CardTitle"
                android:text="Guardian Information" />

            <!-- Row: Guardian Name -->
            <LinearLayout
                style="@style/FieldContainer"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    style="@style/FieldLabel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Guardian Name" />

                <EditText
                    android:id="@+id/et_guardian_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Guardian Name"
                    android:background="@drawable/edit_text_background"
                    android:padding="10dp" />
            </LinearLayout>

            <!-- Row: Guardian Mobile -->
            <LinearLayout
                style="@style/FieldContainer"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    style="@style/FieldLabel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Guardian Mobile" />

                <EditText
                    android:id="@+id/et_guardian_mobile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="09..."
                    android:inputType="phone"
                    android:background="@drawable/edit_text_background"
                    android:padding="10dp" />
            </LinearLayout>

            <!-- Row: Water Baptized -->
            <LinearLayout
                style="@style/FieldContainer"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    style="@style/FieldLabel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Water Baptized" />

                <EditText
                    android:id="@+id/et_water_baptized"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Yes / No"
                    android:background="@drawable/edit_text_background"
                    android:padding="10dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- School Information Card -->
        <LinearLayout
            style="@style/ProfileCard"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/CardTitle"
                android:text="School Information" />

            <!-- Row: Teacher -->
            <LinearLayout
                style="@style/FieldContainer"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    style="@style/FieldLabel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Teacher Name" />

                <EditText
                    android:id="@+id/et_teacher"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Teacher Name"
                    android:background="@drawable/edit_text_background"
                    android:padding="10dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Buttons row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/colorSuccess"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/colorError"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>