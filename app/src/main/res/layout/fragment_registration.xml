<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ph906"
            android:layout_marginBottom="16dp"/>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WELCOME TO"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PH0906"
            android:textColor="#FFD700"
            android:textStyle="bold"
            android:textSize="34sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SYSTEM"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"/>

        <!-- Instruction -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Fill Out All Required Fields"
            android:textColor="#D3D3D3"
            android:layout_marginBottom="12dp"
            android:textSize="14sp"/>

        <!-- Input Fields -->
        <EditText
            android:id="@+id/etNickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nickname"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:textColor="@android:color/white"
            android:textColorHint="#AAAAAA"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Current Place"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:textColor="@android:color/white"
            android:textColorHint="#AAAAAA"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etTeacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teacher"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:textColor="@android:color/white"
            android:textColorHint="#AAAAAA"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:textColor="@android:color/white"
            android:textColorHint="#AAAAAA"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etAltMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alternative Mobile Number"
            android:inputType="phone"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:textColor="@android:color/white"
            android:textColorHint="#AAAAAA"
            android:layout_marginBottom="16dp"/>

        <!-- Checkbox -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <CheckBox
                android:id="@+id/cbAgree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FFD700"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" I agree of "
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/tvTerms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms and Condition, Privacy"
                android:textColor="#FFD700"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Continue Button -->
        <Button
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:backgroundTint="#FFD700"
            android:textColor="@android:color/black"
            android:padding="14dp"
            android:textStyle="bold"
            android:elevation="4dp"
            android:stateListAnimator="@null"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
</ScrollView>
