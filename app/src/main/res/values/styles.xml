<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Card Styles -->
    <style name="ProfileCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/rounded_card</item>
        <item name="android:elevation">4dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Card Title Style -->
    <style name="CardTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#0A2A66</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Text Field Container Style -->
    <style name="FieldContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <!-- Field Label Style -->
    <style name="FieldLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#0A2A66</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <!-- Field Value Style (for profile view) -->
    <style name="FieldValue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">#F5F5F5</item>
    </style>

    <!-- Edit Text Style (for edit profile) -->
    <style name="ProfileEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <!-- Action Button Style -->
    <style name="ActionButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
