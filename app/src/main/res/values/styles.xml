<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Profile input style -->
    <style name="ProfileEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">#888888</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <!-- Optional: shared button style -->
    <style name="RoundedActionButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FilterButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">#2a2a2a</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textSize">13sp</item>
    </style>

</resources>
