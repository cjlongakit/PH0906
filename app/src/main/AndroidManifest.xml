<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- network permission if your API calls need Internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PH906_spalshscreen"
        tools:targetApi="31">

        <!-- Always land here first -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login screen -->
        <activity
            android:name=".LoginActivity"
            android:exported="false" />

        <!-- Main dashboard -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Terms & Agreements: no history so user canâ€™t back-nav here -->
        <activity
            android:name=".TermsActivity"
            android:noHistory="true"
            android:excludeFromRecents="true"
            android:exported="false" />

        <!-- Privacy Policy: same as Terms -->
        <activity
            android:name=".PrivacyActivity"
            android:noHistory="true"
            android:excludeFromRecents="true"
            android:exported="false" />

        <!-- Your existing ForgotPasswordActivity, etc. -->
        <activity android:name=".ForgotPasswordActivity" />
        <activity android:name=".ChangePasswordActivity" />


    </application>
</manifest>