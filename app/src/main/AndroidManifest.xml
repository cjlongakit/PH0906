<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- network permission if your API calls need Internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28" />

    <!-- Declare camera feature as optional to resolve lint error -->
    <uses-feature android:name="android.hardware.camera.any" android:required="false" />

    <application
        android:label="@string/app_name"
        android:allowBackup="true"
        android:icon="@drawable/ph906"
        android:roundIcon="@drawable/ph906"
        android:supportsRtl="true"
        android:theme="@style/Theme.PH906_spalshscreen"
        tools:targetApi="31">

        <!-- FileProvider for camera capture -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Always land here first -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login screen -->
        <activity
            android:name=".LoginActivity"
            android:exported="false" />

        <!-- Main dashboard -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Terms & Agreements: no history so user canâ€™t back-nav here -->
        <activity
            android:name=".TermsActivity"
            android:noHistory="true"
            android:excludeFromRecents="true"
            android:exported="false" />

        <!-- Privacy Policy: same as Terms -->
        <activity
            android:name=".PrivacyActivity"
            android:noHistory="true"
            android:excludeFromRecents="true"
            android:exported="false" />

        <!-- Forgot / Change / OTP / Reset -->
        <activity android:name=".ForgotPasswordActivity" />
        <activity android:name=".ChangePasswordActivity" />
        <activity android:name=".OtpVerificationActivity" />
        <activity android:name=".ResetPasswordActivity" />

        <activity android:name=".ui.profile.EditProfileActivity" android:exported="false" />


    </application>
</manifest>